@page "/employee/{DepartmentId}"
@inherits EmployeeViewModel

<h3>Employee</h3>

@if (employees == null)
{
    <p><em>加载中...</em></p>
}
else
{
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Gender</th>
                <th>Fired</th>
                <th>操作</th>
            </tr>
            @foreach (var item in employees)
            {
                <EmployeeItem employee="@item"></EmployeeItem>
            }
        </table>
    </div>
    <div>
        <a href="/add-employee/@DepartmentId">Add</a>
    </div>
}